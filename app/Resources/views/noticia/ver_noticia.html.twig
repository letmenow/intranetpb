{% extends 'base.html.twig' %}
{% block content %}
<div class="row">  
    <div class="col-lg-2"></div>
        <div class="col-lg-8" style="padding: 50px;margin: 10px;">
            
                <div class="titulo" style="background: #0099df; color: white; padding: 10px;padding-left: 10px;">
                            <h1><b> {{ noticia.titulo |raw}}</b></h1>
                    </div>
                    <div class="resumen" style="background: #cccccc;padding: 10px;">
                        <div>{{ noticia.resumen|raw }} </div><br>
                    </div>
                    <div class="contenido" style="background: #f5f5f5;padding: 10px;">
                        <div>{{ noticia.contenido|raw }}</div>
                    </div><br>
                    <div class="autor">
                        <div><b>Autor:</b> {{ noticia.autor|raw }} - {{ noticia.fecha|date("m/d/Y") }}</div><br>
                </div>
            <br></div> 
    <div class="col-lg-2"></div>              
</div>   
{% endblock %}