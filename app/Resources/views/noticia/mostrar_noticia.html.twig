                                    {{ noticia.resumen }}
                                    <a href="{{ path('ver_noticia', { id: noticia.id}) }}">
                                        <button class="btn-info" style="margin:5 px;">Leer m√°s</button>
                                    </a>
                                </div>
                            </div>
                        </div>     
                    </div>
                </div>
            </div>
        </div>
        <hr class="featurette-divider" style="border-color: #dbdbdb;border-width: 1px;">                              
